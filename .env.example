# IdEinstein V-10 Production Environment Variables
# Copy this file to .env.local and fill in your actual values

# Next.js Configuration
NEXTAUTH_URL=https://your-domain.com
NEXTAUTH_SECRET=your-nextauth-secret-here

# Database
DATABASE_URL=your-database-connection-string

# Zoho Configuration - Individual refresh tokens for each module
ZOHO_CLIENT_ID=your-zoho-client-id
ZOHO_CLIENT_SECRET=your-zoho-client-secret
ZOHO_REFRESH_TOKEN_CRM=your-crm-refresh-token
ZOHO_REFRESH_TOKEN_BOOKS=your-books-refresh-token  
ZOHO_REFRESH_TOKEN_PROJECTS=your-projects-refresh-token
ZOHO_REFRESH_TOKEN_WORKDRIVE=your-workdrive-refresh-token
ZOHO_REFRESH_TOKEN_CAMPAIGNS=your-campaigns-refresh-token
ZOHO_REFRESH_TOKEN_BOOKINGS=your-bookings-refresh-token

# Zoho Organization Settings
ZOHO_ORG_ID=60046481646
ZOHO_PROJECTS_PORTAL_ID=your-projects-portal-id
CAMPAIGNS_LIST_KEY=your-campaigns-list-key

# Zoho Bookings Configuration  
ZOHO_BOOKINGS_SERVICE_ID=331010000000047002
ZOHO_TIMEZONE=Europe/Berlin

# Security
FORM_HMAC_SECRET=your-hmac-secret
ENCRYPTION_KEY=your-encryption-key
ADMIN_PASSWORD_HASH=your-admin-password-hash

# Rate Limiting
RATE_PER_MIN=60

# Production Settings
NODE_ENV=production
VERCEL_ENV=production
